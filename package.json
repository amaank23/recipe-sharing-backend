{
  "name": "recipe-sharing-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "typeorm:generate": "npx typeorm-ts-node-esm migration:generate -d src/app-data-source.ts",
    "typeorm:migrate": "npx typeorm-ts-node-esm migration:run -d src/app-data-source.ts",
    "typeorm:revert": "npx typeorm-ts-node-esm migration:revert -d src/app-data-source.ts",
    "typeorm:drop": "npx typeorm-ts-node-esm schema:drop -d src/app-data-source.ts",
    "create-module": "ts-node scripts/createModule.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.3",
    "@types/nodemailer": "^6.4.14",
    "@types/otp-generator": "^4.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.1.0",
    "cors": "^2.8.5",
    "express-fileupload": "^1.5.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0",
    "otp-generator": "^4.0.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20"
  }
}
